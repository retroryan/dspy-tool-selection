# Claude Provider Configuration
# Copy this file to .env to use Claude models

# Select the provider
DSPY_PROVIDER=claude

# Anthropic Claude Configuration
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Available Claude models (uncomment to use):
# CLAUDE_MODEL=claude-sonnet-4-20250514     # Latest and most capable
# CLAUDE_MODEL=claude-3-7-sonnet-20250219   # Enhanced reasoning
CLAUDE_MODEL=claude-3-5-sonnet-20240620     # Balanced performance (default)

# Alternative models (commented out):
# CLAUDE_MODEL=claude-3-5-haiku-20241022    # Fastest, most cost-effective
# CLAUDE_MODEL=claude-3-opus-20240229       # Previous generation flagship

# Common LLM settings (optional, these are defaults)
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=1024

# Demo settings
DEMO_VERBOSE=true
DSPY_DEBUG=false